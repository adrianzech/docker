    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "postgres",
        "meilisearch",
        "alpine-chrome",
        "mongo"
      ],
      "enabled": false,
      "matchUpdateTypes": [
        "version"
      ]
    }
  ]
}
